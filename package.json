{
  "name": "impact-x",
  "version": "1.0.0",
  "description": "Cross-chain crowdfunding platform for Bitcoin builders",
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:contracts": "cd contracts && clarinet check",
    "test:frontend": "cd frontend && npm run test -- --run",
    "test:contracts": "cd contracts && npm test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.clar": [
      "clarinet check"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
